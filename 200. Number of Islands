class Solution {
    private void pm(char[][]grid,int i, int j){
        if(i>=0&&j>=0&&j<grid[0].length&&i<grid.length&&grid[i][j]=='1'){
        grid[i][j]='0';
        //top//
       pm(grid,i+1,j);
       pm(grid,i-1,j);
       pm(grid,i,j+1);
       pm(grid,i,j-1);



        }
    }
    public int numIslands(char[][] grid) {
        int count =0;
        for(int i=0;i<grid.length;i++){
            for(int j=0;j<grid[0].length;j++){
                if(grid[i][j]=='1'){
                    pm(grid,i,j);
                    count++;
                }
            }
        }
      return count;  
    }
}